<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Red">
        <item name="colorPrimary">@color/colorPrimaryRedBtn</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRedBtn</item>
        <item name="colorAccent">@color/colorAccentRedBtn</item>
        <item name="android:textViewStyle">@style/ButtomText</item>
    </style>

    <style name="ButtomText">
        <item name="android:textSize">40sp</item>
    </style>
    <style name="SmallText">
        <item name="android:textSize">10sp</item>
    </style>
</resources>